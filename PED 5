        let currentQuestion = 0;
        let score = 0;
        let answered = false;
        let studentName = "";

        function startQuiz() {
            const nameInput = document.getElementById('student-name');
            studentName = nameInput.value.trim();
            
            if (!studentName) {
                nameInput.classList.add('border-red-400', 'shake');
                setTimeout(() => nameInput.classList.remove('shake'), 500);
                return;
            }

            document.getElementById('start-screen').classList.add('scale-95', 'opacity-0');
            setTimeout(() => {
                document.getElementById('start-screen').classList.add('hidden');
                document.getElementById('quiz-container').classList.remove('hidden');
                document.getElementById('progress-container').classList.remove('hidden');
                document.getElementById('active-student').textContent = `Student: ${studentName}`;
                showQuestion();
            }, 300);
        }

        function showQuestion() {
            answered = false;
            const q = questions[currentQuestion];
            
            const card = document.getElementById('question-card');
            card.classList.remove('opacity-0', 'translate-y-4');
            
            document.getElementById('category-tag').textContent = q.cat;
            document.getElementById('question-text').textContent = q.q;
            
            const optionsContainer = document.getElementById('options-container');
            optionsContainer.innerHTML = '';
            
            const colors = ['#3b82f6', '#ec4899', '#f59e0b', '#10b981'];
            
            q.a.forEach((option, index) => {
                const btn = document.createElement('button');
                btn.className = "option-btn w-full text-left p-5 rounded-2xl border-2 border-slate-100 bg-white/50 flex items-center group relative overflow-hidden";
                btn.innerHTML = `
                    <span class="w-10 h-10 rounded-xl flex items-center justify-center mr-4 text-white font-black shadow-lg" style="background-color: ${colors[index]}">${String.fromCharCode(65 + index)}</span>
                    <span class="text-slate-700 font-semibold text-lg">${option}</span>
                `;
                btn.onclick = () => selectOption(index, btn);
                optionsContainer.appendChild(btn);
            });

            document.getElementById('next-btn').classList.add('hidden');
            updateProgress();
        }

        function selectOption(index, element) {
            if (answered) return;
            answered = true;
            
            const correct = questions[currentQuestion].correct;
            const options = document.getElementById('options-container').children;

            if (index === correct) {
                score++;
                element.classList.replace('border-slate-100', 'border-green-500');
                element.classList.add('bg-green-50');
                element.innerHTML += '<div class="absolute right-4 text-green-500 font-black">CORRECT!</div>';
            } else {
                element.classList.replace('border-slate-100', 'border-red-500');
                element.classList.add('bg-red-50');
                element.innerHTML += '<div class="absolute right-4 text-red-500 font-black">WRONG</div>';
                
                options[correct].classList.replace('border-slate-100', 'border-green-500');
                options[correct].classList.add('bg-green-50');
            }

            document.getElementById('next-btn').classList.remove('hidden');
        }

        function nextQuestion() {
            currentQuestion++;
            if (currentQuestion < questions.length) {
                showQuestion();
            } else {
                showResults();
            }
        }

        function updateProgress() {
            const percent = ((currentQuestion) / questions.length) * 100;
            document.getElementById('progress-bar').style.width = percent + '%';
            document.getElementById('progress-text').textContent = `Question ${currentQuestion + 1} of ${questions.length}`;
            document.getElementById('percent-text').textContent = Math.round(percent) + '% Complete';
        }

        function showResults() {
            document.getElementById('quiz-container').classList.add('hidden');
            document.getElementById('progress-container').classList.add('hidden');
            document.getElementById('result-screen').classList.remove('hidden');
            
            document.getElementById('display-final-name').textContent = studentName;
            document.getElementById('score-display').textContent = `${score}/${questions.length}`;
            
            let feedback = "";
            const ratio = score / questions.length;
            if (ratio >= 0.9) feedback = `üåü INCREDIBLE, ${studentName.split(' ')[0]}! You've achieved mastery.`;
            else if (ratio >= 0.75) feedback = `üî• EXCELLENT WORK, ${studentName.split(' ')[0]}! You're ready for the actual board.`;
            else if (ratio >= 0.5) feedback = `üëç PASSING SCORE! Good job, ${studentName.split(' ')[0]}. Focus on specific RA numbers.`;
            else feedback = `üìö KEEP REVIEWING, ${studentName.split(' ')[0]}! Review the timeline and RA codes.`;
            
            document.getElementById('feedback-text').textContent = feedback;
        }

        function submitToGoogleForm() {
            // Using the user-provided Google Form link
            const baseUrl = "https://docs.google.com/forms/d/e/1FAIpQLSeHAS7wCOnW90qSJzj3w234vvARwnVH-BuKMgl7bHeBXweWCQ/viewform";
            
            // Entry IDs for Name and Score fields (Mapping usually requires knowing the entry.XXXXXX IDs)
            // Since we don't have the entry IDs, we can't do absolute pre-fill, 
            // but we can pass them as parameters or guide the user.
            
            // Assuming standard "entry" query parameters (requires knowing specific IDs from form source)
            // If IDs are unknown, we append the data so the user can see it in the URL or simply open the form.
            
            const nameField = studentName;
            const scoreField = `${score}/${questions.length}`;
            
            // Prompt user with their info so they can copy-paste if auto-fill fails (fallback)
            const submissionUrl = `${baseUrl}?usp=pp_url&entry.123456789=${encodeURIComponent(nameField)}&entry.987654321=${encodeURIComponent(scoreField)}`;
            
            // Note: Without exact entry IDs, the form will just open. 
            // I'm providing the link to open the form for them.
            window.open(baseUrl, '_blank');
            
            // For a better experience, we can tell them:
            alert(`Opening form! \n\nYour Details to enter:\nName: ${nameField}\nScore: ${scoreField}`);
        }
    </script>
</body>
</html>
